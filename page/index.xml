}
.book-cover {
flex-shrink: 0;
width: 120px;
height: 180px;
border-radius: 8px;
overflow: hidden;
box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}
.book-cover img {
width: 100%;
height: 100%;
object-fit: cover;
transition: transform 0.3s ease;
}
.book-item:hover .book-cover img {
transform: scale(1.05);
}
.book-info {
flex: 1;
