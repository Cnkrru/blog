}
/* 响应式设计 */
@media (max-width: 768px) {
.books-container {
padding: 16px;
}
.book-item {
flex-direction: column;
align-items: center;
text-align: center;
padding: 16px;
}
.book-cover {
width: 100px;
height: 150px;
}
.book-info {
width: 100%;
}
.book-title {
font-size: 16px;
margin-top: 12px;
}
.book-meta {
justify-content: center;
}
}
